index 31d8c18746..5f9d8c23ea 100644
--- a/include/openssl/types.h
+++ b/include/openssl/types.h
@@ -232,8 +232,6 @@ typedef struct ossl_decoder_ctx_st OSSL_DECODER_CTX;
 
